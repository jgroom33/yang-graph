module ciena-system-telemetry {
   namespace "urn:ciena:params:xml:ns:yang:ciena-pn::ciena-system-telemetry";

   prefix "ciena-sys-tmet";

   organization
      "Ciena Corporation";

   contact
      "Web URL: http://www.ciena.com/

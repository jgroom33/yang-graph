    }

    import ciena-routing-policy {
        prefix "rt-pol";
    }

    import openconfig-interfaces {
        prefix "oc-if";
    }

    import ciena-bfd-types {
        prefix "bfd-types";
    }

    import ciena-l2vpn {
        prefix "l2vpn";
    }

    import ciena-system-telemetry {
        prefix ciena-sys-tmet;
    }

    import ciena-sr {
        prefix sr;
    }

    import ciena-extensions {
        prefix cn-ext;
    }

